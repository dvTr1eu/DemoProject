@model Core.DTOs.GenreDto
@{
    ViewData["Title"] = "UpdateGenre";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Cập nhật thể loại</h1>
@using (Html.BeginForm("UpdateGenre", "AdminGenre", new { }, FormMethod.Post, true, new { }))
{
    <div class="mb-3">
        <label class="form-label">Tên thể loại</label>
        <input type="text" asp-for="Name" class="form-control border" id="name">
    </div>
    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control border" id="description" rows="3"></textarea>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Lưu">
    </div>
}

